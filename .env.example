# Bluefin AlphaLend Monitor - Configuration File
# Copy this to .env and fill in your values

# Your SUI wallet address to monitor
SUI_WALLET_ADDRESS=your-sui-wallet-address

# Alert Configuration
ALERT_EMAIL=your-email@example.com

# Email Settings (for email alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-sender@gmail.com
SENDER_PASSWORD=your-app-password-here

# Telegram Settings (optional, for Telegram alerts)
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here

# Monitoring Thresholds
LTV_WARNING_THRESHOLD=70
LTV_CRITICAL_THRESHOLD=80

# Check interval in minutes (for continuous monitoring)
CHECK_INTERVAL_MINUTES=15
